+    end_date2 = period_end(end_date2, spec.ep1 > spec.ep2 ? spec.ep1 : spec.ep2);
+    if (end_date2 == wxInvalidDateTime)
+        return wxInvalidDateTime;
+    return end_date1 >= end_date2 ? end_date1 : end_date2;
